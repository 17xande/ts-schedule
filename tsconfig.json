    "target": "ESNext",
    // "module": "",              
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "watch": true,
    "removeComments": true,
    // "moduleResolution": "node",
    "baseUrl": ".",
